  <script>
    // Переключение страниц
    document.getElementById('main-button').addEventListener('click', function(e) {
      e.preventDefault();
      document.getElementById('section1').style.opacity = '0';
      setTimeout(() => {
        document.getElementById('section1').style.display = 'none';
        document.getElementById('section2').classList.add('show');
      }, 700);
    });

    // Данные участников
    const members = {
      "Waysiemens": "Сергей — владелец игрового сообщества, Squad Leader.",
      "Bareski": "Ярослав — OG команды.",
      "Smakovv": "Александр — OG команды.",
      "Edgar": "Денис — Bro-OG команды.",
      "Mental": "Олег — OG команды.",
      "Ger4eek": "Герман — Bro-Legend команды.",
      "Tur-9000": "Дмитрий — Bro-Legend команды.",
      "Prok": "Вячеслав — Bro-OG команды.",
      "Shootka": "Ярослав — Legend-GM команды.",
      "Kiruxa": "Кирилл — Legend-GM команды."
    };

    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modal-title');
    const modalText = document.getElementById('modal-text');
    const closeBtn = document.querySelector('.close-btn');

    document.addEventListener('click', function(e) {
      if (e.target.dataset.member) {
        e.preventDefault();
        const name = e.target.dataset.member;
        modalTitle.textContent = name;
        modalText.textContent = members[name] || "Информация отсутствует.";
        modal.style.display = 'flex';
      }
    });

    closeBtn.addEventListener('click', () => modal.style.display = 'none');
    modal.addEventListener('click', e => { if (e.target === modal) modal.style.display = 'none'; });
  </script>
